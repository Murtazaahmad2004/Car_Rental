<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"
    tools:context=".MainActivity2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Rent A Car AnyTime"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="WelCome To Friends Rental"
        android:layout_marginTop="60dp" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp">

        <RadioButton
            android:id="@+id/radio_pickup"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Same DropOff" />

        <RadioButton
            android:id="@+id/radio_dropoff"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Different DropOff"
            android:textColor="@color/black" />
    </RadioGroup>

    <EditText
        android:id="@+id/pickup_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:drawablePadding="22dp"
        android:hint="Enter PickUp Location"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:drawableLeft="@drawable/baseline_location_on_24" />

    <EditText
        android:id="@+id/dropoff_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:drawablePadding="22dp"
        android:hint="Enter dropOff location"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:visibility="gone"
        android:drawableLeft="@drawable/baseline_pin_drop_24" />

    <Button
        android:id="@+id/dropoff_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Dropoff Date"
        android:textColorHint="@color/black"
        android:backgroundTint="@color/white"
        android:padding="20dp"
        android:drawablePadding="22dp"
        android:visibility="gone"
        android:layout_below="@id/pickup_location"
        android:drawableLeft="@drawable/baseline_calendar_month_24" />

    <Button
        android:id="@+id/pickup_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Pickup Date"
        android:textColorHint="@color/black"
        android:backgroundTint="@color/white"
        android:padding="20dp"
        android:drawablePadding="22dp"
        android:layout_marginTop="160dp"
        android:drawableLeft="@drawable/baseline_calendar_month_24" />

    <!-- Action Button -->
    <Button
        android:id="@+id/find_car_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find a Car"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/dropoff_location"/>

</RelativeLayout>
